{
	"name": "@neovici/cosmoz-input",
	"version": "5.4.0",
	"description": "A input web component",
	"keywords": [
		"lit-html",
		"web-components"
	],
	"homepage": "https://github.com/neovici/cosmoz-input#readme",
	"bugs": {
		"url": "https://github.com/neovici/cosmoz-input/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/neovici/cosmoz-input.git"
	},
	"license": "Apache-2.0",
	"author": "",
	"main": "dist/index.js",
	"directories": {
		"test": "test"
	},
	"files": [
		"dist/"
	],
	"scripts": {
		"lint": "tsc && eslint --cache .",
		"build": "tsc -p tsconfig.build.json",
		"start": "wds",
		"test": "wtr --coverage",
		"test:watch": "wtr --watch",
		"prepare": "husky install",
		"storybook:start": "storybook dev -p 8000",
		"storybook:build": "storybook build",
		"storybook:deploy": "storybook-to-ghpages",
		"storybook:preview": "npm run storybook:build && http-server ./storybook-static/ --silent"
	},
	"release": {
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/github",
			"@semantic-release/npm",
			"@semantic-release/git"
		],
		"branch": "master",
		"preset": "conventionalcommits"
	},
	"publishConfig": {
		"access": "public"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"body-max-line-length": [
				1,
				"always",
				600
			]
		}
	},
	"exports": {
		".": "./dist/index.js",
		"./use-input": "./dist/use-input.js",
		"./input": "./dist/cosmoz-input.js",
		"./textarea": "./dist/cosmoz-textarea.js",
		"./toggle": "./dist/cosmoz-toggle.js"
	},
	"dependencies": {
		"@neovici/cosmoz-utils": "^6.0.0",
		"@pionjs/pion": "^2.0.0",
		"lit-html": "^2.0.0 || ^3.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.0.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@neovici/cfg": "^1.13.1",
		"@open-wc/testing": "^4.0.0",
		"@semantic-release/changelog": "^6.0.0",
		"@semantic-release/git": "^10.0.0",
		"@storybook/web-components-vite": "^9.1.5",
		"@types/mocha": "^10.0.3",
		"http-server": "^14.1.1",
		"husky": "^8.0.0",
		"semantic-release": "^22.0.0",
		"sinon": "^17.0.0",
		"storybook": "^9.1.5"
	}
}
